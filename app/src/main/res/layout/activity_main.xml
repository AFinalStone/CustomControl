<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:monkey="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#237EAD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="400dp">

        <com.monkey.miclockview.MiClockView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            monkey:backgroundColor="#237EAD"
            monkey:darkColor="#80ffffff"
            monkey:lightColor="#ff0000"
            monkey:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
